{% extends '::base.html.twig' %}

{% block body -%}
<h1>Position edit</h1>

{{ form_start(edit_form) }}
<div class="form-group">
    {{ form_label(edit_form.latitude) }}
    {{ form_widget(edit_form.latitude, {'attr':{'class':'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_label(edit_form.longitude) }}
    {{ form_widget(edit_form.longitude, {'attr':{'class':'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_label(edit_form.user) }}
    {{ form_widget(edit_form.user, {'attr':{'class':'form-control'}}) }}
</div>
{{ form_widget(edit_form.submit, {'attr':{'class':'btn btn-primary'}}) }}
{{ form_end(edit_form) }}

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_position') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
