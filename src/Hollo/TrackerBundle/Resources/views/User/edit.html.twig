{% extends '::base.html.twig' %}

{% block body -%}
<h1>User edit</h1>

{{ form_start(edit_form) }}
<div class="form-group">
    {{ form_label(edit_form.name) }}
    {{ form_widget(edit_form.name, {'attr':{'class':'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_label(edit_form.username) }}
    {{ form_widget(edit_form.username, {'attr':{'class':'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_label(edit_form.email) }}
    {{ form_widget(edit_form.email, {'attr':{'class':'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_label(edit_form.fraction) }}
    {{ form_widget(edit_form.fraction, {'attr':{'class':'form-control'}}) }}
</div>
<div class="form-group">
    {{ form_label(edit_form.rank) }}
    {{ form_widget(edit_form.rank, {'attr':{'class':'form-control'}}) }}
</div>

{{ form_widget(edit_form.submit, {'attr':{'class':'btn btn-primary'}}) }}
{{ form_end(edit_form) }}

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_user') }}">
            Back to the list
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
